generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Prompt {
  id             Int      @id @default(autoincrement())
  name           String   @unique
  promptText     String
  
  // Vote counts
  goodVotes      Int      @default(0)
  okVotes        Int      @default(0)
  badVotes       Int      @default(0)
  totalVotes     Int      @default(0)
  
  // Percentages
  goodPercentage Float    @default(0)
  okPercentage   Float    @default(0)
  badPercentage  Float    @default(0)
}