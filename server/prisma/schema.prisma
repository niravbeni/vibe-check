generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Prompt {
  id           String   @id
  name         String
  promptText   String
  systemPrompt String
  votes       Vote[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Vote {
  id        Int      @id @default(autoincrement())
  promptId  String
  score     String   // 'good', 'ok', or 'bad'
  prompt    Prompt   @relation(fields: [promptId], references: [id])
  createdAt DateTime @default(now())
} 