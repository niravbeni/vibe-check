generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Prompt {
  id           String   @id @default(uuid())
  name         String   // e.g., "A - Style"
  promptText   String
  systemPrompt String?
  votes        Vote[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Vote {
  id        String   @id @default(uuid())
  promptId  String
  score     String   // Only allows: 'good', 'bad', 'ok'
  prompt    Prompt   @relation(fields: [promptId], references: [id])
  createdAt DateTime @default(now())

  @@index([promptId])
}